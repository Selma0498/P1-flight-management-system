<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <!--
        Added the constraints for entity Booking.
    -->
    <changeSet id="20200819215944-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="flight_id"
                                 baseTableName="booking"
                                 constraintName="fk_booking_flight_id"
                                 referencedColumnNames="id"
                                 referencedTableName="flight"/>

        <addForeignKeyConstraint baseColumnNames="booking_id"
                                 baseTableName="booking_passenger"
                                 constraintName="fk_booking_passenger_booking_id"
                                 referencedColumnNames="id"
                                 referencedTableName="booking"/>

        <addForeignKeyConstraint baseColumnNames="passenger_id"
                                 baseTableName="booking_passenger"
                                 constraintName="fk_booking_passenger_passenger_id"
                                 referencedColumnNames="id"
                                 referencedTableName="passenger"/>
        
    </changeSet>
</databaseChangeLog>
