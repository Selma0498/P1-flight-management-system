<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd">
    <!--
        Added the constraints for entity Flight.
    -->
    <changeSet id="20200820215414-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="flight_handler_id"
                                 baseTableName="flight"
                                 constraintName="fk_flight_flight_handler_id"
                                 referencedColumnNames="id"
                                 referencedTableName="flight_handling"/>

        <addForeignKeyConstraint baseColumnNames="origin_id"
                                 baseTableName="flight"
                                 constraintName="fk_flight_origin_id"
                                 referencedColumnNames="id"
                                 referencedTableName="airport"/>

        <addForeignKeyConstraint baseColumnNames="destination_id"
                                 baseTableName="flight"
                                 constraintName="fk_flight_destination_id"
                                 referencedColumnNames="id"
                                 referencedTableName="airport"/>

        <addForeignKeyConstraint baseColumnNames="airline_id"
                                 baseTableName="flight"
                                 constraintName="fk_flight_airline_id"
                                 referencedColumnNames="id"
                                 referencedTableName="airline"/>

        <addForeignKeyConstraint baseColumnNames="plane_id"
                                 baseTableName="flight"
                                 constraintName="fk_flight_plane_id"
                                 referencedColumnNames="id"
                                 referencedTableName="plane"/>

    </changeSet>
</databaseChangeLog>
